@model IEnumerable<Teste.Models.Empresa>

@{
    ViewData["Title"] = "Empresas";
}

<h2 class="mb-4">Lista de Empresas</h2>

<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Sigla</th>
            <th>NUIT</th>
            <th>Tipo de Entidade</th>
            <th>Forma Jurídica</th>
            <th>Situação</th>
            <th>Forma Juridica</th>
            <th>Capital Social Público</th>
            <th>Volume de Negocios</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Sigla</td>
                    <td>@item.NUIT</td>
                    <td>@item.TipoEntidade</td>
                    <td>@item.FormaJuridica</td>
                    <td>@item.SituacaoActividade</td>
                    <td>@item.FormaJuridica</td>
                    <td>@item.CapitalSocialPublico</td>
                    <td>@item.VolumeNegocios</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Remover</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Nenhuma empresa registrada.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">+ Nova Empresa</a>
